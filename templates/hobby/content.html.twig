{% extends 'base.html.twig' %}

{% block header_menu %}
    {% include 'header/default.html.twig' %}
    {% include 'header/hobbyFamilies.html.twig' %}
{% endblock %}

{% block body %}

    {% if hobby_categories is defined %}

        {% for hobby_category in hobby_categories %}
            <a href="{{ path('app_hobbiesKorea', { family: hobby_category.hobbyFamilies.name, category: hobby_category.name}) }}">
                <div>
                    {{ hobby_category.name }}
                </div>
            </a>
        {% endfor %}

    {% endif %}

    {% if hobbies is defined %}

        {% for hobby in hobbies %}
            {{ hobby.name }} -

            {% for category in hobby.hobbyCategories %}
                {{ category.name }}
            {% endfor %}

            <br/>
        {% endfor %}

    {% endif %}
{% endblock %}