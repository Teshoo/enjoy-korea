<!-- Default header -->

<div class="logo">
    <a href="{{ path('app_enjoyKorea') }}">
        <img class="logo" src="{{ asset('visitkorea_logo_white 1.svg') }}" alt="visit korea logo">
    </a>
</div>
<div class="header_default">
    {% if app.request.attributes.get('_route') == 'app_eventKorea' %}
        <a class="menu_default menu_default_active" href="{{ path('app_eventKorea') }}">
            What to do tonight?
        </a>
        <a class="menu_default" href="{{ path('app_hobbyFamilies') }}">
            Practice your hobbies
        </a>
        <a class="favorite" href="{{ path('app_favorites') }}">
            Favorites
        </a>
    {% elseif app.request.attributes.get('_route') == 'app_hobbyFamilies' or app.request.attributes.get('family_name') %}
        <a class="menu_default" href="{{ path('app_eventKorea') }}">
            What to do tonight?
        </a>
        <a class="menu_default menu_default_active" href="{{ path('app_hobbyFamilies') }}">
            Practice your hobbies
        </a>
        <a class="favorite" href="{{ path('app_favorites') }}">
            Favorites
        </a>
    {% elseif app.request.attributes.get('_route') == 'app_favorites' %}
        <a class="menu_default" href="{{ path('app_eventKorea') }}">
            What to do tonight?
        </a>
        <a class="menu_default" href="{{ path('app_hobbyFamilies') }}">
            Practice your hobbies
        </a>
        <a class="favorite menu_default_active" href="{{ path('app_favorites') }}">
            Favorites
        </a>
    {% else %}
        <a class="menu_default" href="{{ path('app_eventKorea') }}">
            What to do tonight?
        </a>
        <a class="menu_default" href="{{ path('app_hobbyFamilies') }}">
            Practice your hobbies
        </a>
        <a class="favorite" href="{{ path('app_favorites') }}">
            Favorites
        </a>
    {% endif %}
</div>